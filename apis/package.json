{
  "name": "apis",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc src",
    "start": "./src/servers/express"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "json-server": "^0.16.1",
    "lodash": "^4.17.15",
    "rxjs": "^6.5.5",
    "typescript": "^3.9.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/json-server": "^0.14.2",
    "@types/lodash": "^4.14.151",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "eslint": "^7.0.0",
    "eslint-config-airbnb-typescript-prettier": "^2.1.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.5"
  },
  "eslintConfig": {
    "settings": {
      "import/resolver": {
        "node": {
          "paths": [
            "src"
          ],
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      }
    },
    "extends": [
      "airbnb-typescript-prettier"
    ],
    "rules": {
      "semi": 0,
      "no-unused-vars": "off",
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "ts": "never"
        }
      ],
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ],
      "prettier/prettier": [
        "error",
        {
          "semi": false,
          "singleQuote": true,
          "endOfLine": "auto"
        }
      ]
    }
  }
}
